{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    // output .d.ts declaration files for consumers
    // "declaration": true,
    // "declarationDir": "dist",
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/*",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "build"
  ]
}
